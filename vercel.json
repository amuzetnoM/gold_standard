{
  "version": 2,
  "name": "syndicate",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "buildCommand": "bash build.sh",
  "env": {
    "PYTHONUNBUFFERED": "1",
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHON_VERSION": "3.12"
  },
  "functions": {
    "api/index.py": {
      "memory": 3008,
      "maxDuration": 300
    }
  }
}
